@model EventManager.Models.Event

@{ViewData["Title"] = "Create"; }

<h2>Add Event</h2>
<form class="form-horizontal" method="post">
    <fieldset>
        <div class="form-group">
            <label for="Venue" class="col-md-2 control-label">Venue</label>
            <div class="col-md-10">
                <input asp-for="Venue" type="text" class="form-control">
                <span asp-validation-for="Venue" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label for="Date" class="col-md-2 control-label">Date</label>
            <div class="col-md-10">
                <input asp-for="Date" type="date" id="datepicker" class="form-control">
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label for="Time" class="col-md-2 control-label">Time</label>
            <div class="col-md-10">
                <input asp-for="Time" type="time" class="form-control">
                <span asp-validation-for="Time" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label for="Genre" class="col-md-2 control-label">Genre</label>
            <div class="col-md-10">
                <select asp-for="GenreID" asp-items="ViewBag.Genres" class="inline form-control">
                    <option value="0" selected="selected">Select Genre</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10 col-md-offset-2">
                <button type="submit" class="btn btn-primary btn-danger">Submit</button>
                <a asp-action="Index" class="btn btn-default">Cancel</a>
            </div>
        </div>
    </fieldset>
</form>